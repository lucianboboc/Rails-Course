<article>
  <header>
    <h1><%= @movie.title %></h1>
  </header>
  <%= form_for(@movie)  do |f| %>
  <p>
    <%= f.label :title %> </br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :description %> </br>
    <%= f.text_area :description, cols: 40, rows: 5 %>
  </p>

  <p>
    <%= f.label :rating %> </br>
    <%= f.text_field :rating %>
  </p>

  <p>
    <%= f.label :total_gross %> </br>
    <%= f.number_field :total_gross %>
  </p>

  <p>
    <%= f.label :released_on %> </br>
    <%= f.date_select :released_on %>
  </p>

  <p>
    <%= f.submit %>
  </p>

  <% end %>
</article>

<%= link_to "Back", movie_path(@movie) %>